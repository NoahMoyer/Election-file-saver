<Window x:Class="Election_Saver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Election_Saver"
        mc:Ignorable="d"
        Title="Election Saver" MinHeight="450" MinWidth="800"
        MaxHeight="450" MaxWidth="800">
    <Grid x:Name="Election_Saver" Margin="0,0,0,-16" >

        <TabControl>
            <TabItem Header="Main">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="37*"/>
                        <ColumnDefinition Width="360*"/>
                    </Grid.ColumnDefinitions>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2" Margin="22,211,502,53"/>
                    <Button x:Name="CopyFilesButton" Content="Copy files" HorizontalAlignment="Left" Margin="292,170,0,0" VerticalAlignment="Top" Height="56" Width="116" Click="CopyFilesButton_Click" IsEnabled="False" Grid.Column="1"/>
                    <Button x:Name="printButton" Content="Print files" HorizontalAlignment="Left" Margin="435,170,0,0" VerticalAlignment="Top" Height="56" Width="116" Click="printButton_Click" IsEnabled="False" Grid.Column="1"/>
                    <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Height="40" Margin="323,280,0,0" VerticalAlignment="Top" Width="200" Visibility="Visible" Grid.Column="1"/>
                    <ComboBox x:Name="driveSelector" HorizontalAlignment="Left" Margin="363,68,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="18934.85,111261.719" SelectionChanged="driveSelector_SelectionChanged" Grid.Column="1"/>
                    <TextBox x:Name="PreceintTextBox" HorizontalAlignment="Left" Margin="365,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" TextChanged="PreceintTextBox_TextChanged" Grid.Column="1"/>
                    <CheckBox x:Name="allowOverwriteCheckBox" Content="Check to allow files to be overwritten" HorizontalAlignment="Right" Margin="0,119,7,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <TextBox x:Name="timeBox" HorizontalAlignment="Left" Margin="154,52,0,0" TextWrapping="Wrap" Text="Enter time between prints here" VerticalAlignment="Top" Width="127" Height="36" Visibility="Hidden" IsEnabled="False" Grid.Column="1"/>
                    <Label x:Name="driveSelectorLabel" Content="Drive selection" HorizontalAlignment="Left" Margin="379,37,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <Button x:Name="refreshDrivesButton" Content="Refresh Drives" HorizontalAlignment="Left" Margin="493,44,0,0" VerticalAlignment="Top" Click="refreshDrivesButton_Click" Grid.Column="1"/>
                    <Label x:Name="precinctBoxLabel" Content="Enter precinct below" HorizontalAlignment="Left" Margin="363,95,0,0" VerticalAlignment="Top" Cursor="" Width="120" Grid.Column="1"/>
                    <Button Content="Button" Margin="515,78,205,344" Grid.Column="1"/>
                    <Button x:Name="unlockBitlockerButton" Content="Unlock Drive" HorizontalAlignment="Left" Margin="493,69,0,0" VerticalAlignment="Top" Width="79" Click="unlockBitlockerButton_Click" Grid.Column="1"/>
                    <Label x:Name="progressBarLabel" Content="Processing please wait..." HorizontalAlignment="Left" Margin="355,254,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <ScrollViewer Margin="22,211,502,53" Grid.ColumnSpan="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >
                        <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="Auto">
                            <TextBlock x:Name="localFilesTextBlock" TextWrapping="Wrap" Text="Please enter precinct number." Height="132" Width="221" Grid.ColumnSpan="2"/>
                        </DockPanel>
                    </ScrollViewer>
                    <Label x:Name="fileDataLabel" Content="Files available to copy from flash drive:" HorizontalAlignment="Left" Margin="22,0,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="263"/>
                    <Label x:Name="fileDataLabel_Copy" Content="Files available to print:" HorizontalAlignment="Left" Margin="22,185,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="142"/>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2" Margin="22,27,502,237"/>
                    <ScrollViewer Margin="22,26,502,238" Grid.ColumnSpan="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >
                        <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="Auto">
                            <TextBlock x:Name="flashFilesTextBlock" TextWrapping="Wrap" Text="Please enter precinct number." Height="132" Width="221" Grid.ColumnSpan="2"/>
                        </DockPanel>
                    </ScrollViewer>
                    <Label x:Name="driveLockStatusLable" Grid.Column="1" Content="Drive status" HorizontalAlignment="Left" Margin="605,65,0,0" VerticalAlignment="Top" Width="73"/>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" Margin="596,65,35,308"/>
                    <Label Grid.Column="1" Content="Drive lock status" HorizontalAlignment="Left" Margin="592,34,0,0" VerticalAlignment="Top" Width="99"/>
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5">
                    <PasswordBox x:Name="bitLockerPasswordTextBox" HorizontalAlignment="Left" Margin="84,70,0,0" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="updateBitLockerPassword" Content="Set Bitlocker password" HorizontalAlignment="Left" Margin="224,69,0,0" VerticalAlignment="Top" Click="updateBitLockerPassword_Click"/>

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
